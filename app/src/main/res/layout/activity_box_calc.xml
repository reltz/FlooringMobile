<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoxCalc"
    android:orientation="vertical"
    android:background="@color/background">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:shadowDx="3.0"
        android:shadowDy="3.0"
        android:shadowRadius="2.0"
        android:shadowColor="@color/borders"
        android:text="How many boxes do I need? "
        android:textColor="@color/white"
        android:paddingTop="20sp"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/enterMeasure"
            android:layout_marginRight="40dp"
            android:layout_weight="1.5"


            />

        <EditText
            android:id="@+id/measure1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:background="@color/white"
            android:inputType="number"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="@string/boxSize"
            android:layout_marginRight="40dp"
            android:layout_weight="1.5"

            />

        <EditText

            android:id="@+id/boxSize1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:background="@color/white"
            android:inputType="number"
             />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="1.5"
            android:text="@string/price" />

        <EditText

            android:id="@+id/price1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="left"
            android:layout_weight="1.3"
            android:inputType="number"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="10% extra"
            android:gravity="fill"/>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculateBoxes"
        android:text="@string/calculate"
        android:layout_weight="1.5"
        />

        <Button
            android:id="@+id/reset1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"
            android:layout_weight="0.8"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/outputBox"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalPrice"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pricePerSquare"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />


</LinearLayout>